{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",

		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,

		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
